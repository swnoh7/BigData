package 변수및자료형;

public class Ex02변수 {
	// 체크하지못해 main을 못만들었다면!
	// main ctrl space ---> 자동완성 가능! (지우고 다시만들필요X)
	public static void main(String[] args) {
	
		// 변수 선언
		// 정수 데이터 4를 담을 수 있는 num 변수 선언
		// 자료형 변수명 = 값;
		int num = 4;
		// 변수를 사용하는 이유는?
		// ---> 재사용하기 위해서!
		System.out.println(num);
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
